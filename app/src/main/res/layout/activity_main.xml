<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation ="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    //NOMBRE//

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="@string/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombre"
        android:layout_weight="0.15"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/nombre"
        android:ems="10"
        android:id="@+id/etNombre"
        android:layout_weight="0.15" />
    </LinearLayout>


    <Space
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    //LUGAR//


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="@string/lugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLugar"
        android:layout_weight="0.15" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/lugar"
        android:ems="10"
        android:id="@+id/etLugar"
        android:layout_weight="0.15"/>
    </LinearLayout>



    <Space
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    //FECHA//


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="@string/fecha_nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFecha" />


    <EditText
        android:id="@+id/etFecha"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:hint="@string/from_date"/>
    </LinearLayout>



    <Space
        android:layout_width="1dp"
        android:layout_height="50dp"/>

    //SEXO//


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="@string/sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSexo"
        android:layout_weight="0.15" />


    <Spinner
        android:id="@+id/sexo_spinner"
        android:layout_width="167dp"
        android:layout_height="wrap_content"/>
    </LinearLayout>


    <Space
        android:layout_width="1dp"
        android:layout_height="50dp"/>

    //VICIOS//



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="@string/vicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVicios"
        android:layout_weight="0.15"/>
    </LinearLayout>

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/vicio1"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/vicio2"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/vicio3"/>

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/vicio4"/>


    </LinearLayout>


    <Space
        android:layout_width="1dp"
        android:layout_height="50dp"/>

    //TRABAJO//

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
    <TextView
        android:text="@string/profesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTrabajo"
        android:layout_weight="0.15" />
    </LinearLayout>

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_funcionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profesion1"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_pringao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profesion2"
            android:onClick="onRadioButtonClicked"
            android:layout_toRightOf="@+id/radio_funcionario"/>
    </RadioGroup>


    </LinearLayout>


    <Space
        android:layout_width="1dp"
        android:layout_height="50dp"/>


    //BOTON//

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="@string/Boton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEnviar"
            android:elevation="0dp"/>
    </LinearLayout>


</LinearLayout>
